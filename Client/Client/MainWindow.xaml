<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="MainTab">
            <TabItem x:Name="TabState" Header="Stan Magazynu"/>
            <TabItem x:Name="TabTransactions" Header="Transakcje" />
            <TabItem x:Name="TabClients" Header="Klienci" />
            <TabItem x:Name="TabItems" Header="Artykuł" />
            <TabItem x:Name="TabCategory" Header="Kategorie" >
                <Canvas>
                    <DataGrid x:Name="dg_kat" HorizontalAlignment="Left" VerticalAlignment="Top" Height="211" Width="265"  IsReadOnly="True" Canvas.Left="10" Canvas.Top="40">
                        <DataGrid.Columns>
                            <DataGridTextColumn   Header="ID" Width="110" Binding="{Binding idKategorii}" />
                            <DataGridTextColumn   Header="Nazwa" Width="*" Binding="{Binding Nazwa}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="btndodaj" Content="Dodaj" Canvas.Left="369" Canvas.Top="95" Width="75" />
                    <Button x:Name="btnmodyfikuj" Content="Modyfikuj" Canvas.Left="369" Canvas.Top="95" Width="75" />
                    <Button x:Name="btnusun" Content="Usuń" Canvas.Left="369" Canvas.Top="95" Width="75"  />
                    <RadioButton Name="rb_kat_wszystko" GroupName="gn" Content="Wszystko" Canvas.Left="10" Canvas.Top="10"  Checked="rb_kat_wszystko_Checked" />
                    <RadioButton Name="rb_kat_dodaj" GroupName="gn" Content="Dodaj" Canvas.Left="96" Canvas.Top="10" Checked="rb_kat_dodaj_Checked"/>
                    <RadioButton Name="rb_kat_modyfikuj" GroupName="gn" Content="Modyfikuj" Canvas.Left="168" Canvas.Top="10" Checked="rb_kat_modyfikuj_Checked" />
                    <RadioButton Name="rb_kat_usun" GroupName="gn" Content="Usuń" Canvas.Left="260" Canvas.Top="10" Checked="rb_kat_usun_Checked"/>
                    <TextBox x:Name="txt_nazwa" Height="23" Canvas.Left="369" TextWrapping="Wrap" Canvas.Top="67" Width="120" RenderTransformOrigin="0.115,0.691"/>
                </Canvas>
            </TabItem>
        </TabControl>
    </Grid>
</Window>